@model List<EpiHot.Models.Dto.ReservationByFiscalCodeDto>

<div class="form-group">
    <label for="fiscalCode">Codice Fiscale</label>
    <input type="text" class="form-control" id="fiscalCode" name="fiscalCode" required>
</div>
<button type="button" class="btn btn-primary">Cerca</button>

<div id="fiscalCodeResults">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>ReservationId</th>
                    <th>CustomerFiscalCode</th>
                    <th>RoomNumber</th>
                    <th>ReservationNumber</th>
                    <th>ReservationDate</th>
                    <th>ReservationStartStayDate</th>
                    <th>ReservationEndStayDate</th>
                    <th>ReservationDeposit</th>
                    <th>ReservationPrice</th>
                    <th>ReservationType</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var reservation in Model)
                {
                    <tr>
                        <td>@reservation.ReservationId</td>
                        <td>@reservation.CustomerFiscalCode</td>
                        <td>@reservation.RoomNumber</td>
                        <td>@reservation.ReservationNumber</td>
                        <td>@reservation.ReservationDate.ToString("dd/MM/yyyy")</td>
                        <td>@reservation.ReservationStartStayDate.ToString("dd/MM/yyyy")</td>
                        <td>@reservation.ReservationEndStayDate.ToString("dd/MM/yyyy")</td>
                        <td>@reservation.ReservationDeposit</td>
                        <td>@reservation.ReservationPrice</td>
                        <td>@reservation.ReservationType</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Nessuna prenotazione trovata per il codice fiscale inserito.</p>
    }
</div>

<script>
    $(document).ready(function () {
        $('button').click(function () {
            var fiscalCode = $('#fiscalCode').val();
            $.ajax({
                url: '@Url.Action("GetReservationsByFiscalCode", "Reservation")',
                type: 'GET',
                data: { fiscalCode: fiscalCode },
                success: function (result) {
                    $('#fiscalCodeResults').html(result);
                },
                error: function (xhr, status, error) {
                    console.error('Errore durante la ricerca delle prenotazioni: ', status, error);
                }
            });
        });
    });
</script>