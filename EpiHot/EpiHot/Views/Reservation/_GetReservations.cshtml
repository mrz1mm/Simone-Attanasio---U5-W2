@model List<EpiHot.Models.MW.GetReservationMW>

<h2>Elenco Prenotazioni</h2>
<table class="table">
    <thead>
        <tr>
            <th>Nome completo</th>
            <th>Numero stanza</th>
            <th>Numero prenotazione</th>
            <th>Data di prenotazione</th>
            <th>Data di inizio soggiorno</th>
            <th>Data di fine soggiorno</th>
            <th>Caparra</th>
            <th>Prezzo</th>
            <th>Tipo di soggiorno</th>
            <th>Configura</th>
            <th>Azioni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reservation in Model)
        {
            <tr>
                <td>@reservation.CustomerFullName</td>
                <td>@reservation.RoomNumber</td>
                <td>@reservation.ReservationNumber</td>
                <td>@reservation.ReservationDate.ToString("dd/MM/yyyy")</td>
                <td>@reservation.ReservationStartStayDate.ToString("dd/MM/yyyy")</td>
                <td>@reservation.ReservationEndStayDate.ToString("dd/MM/yyyy")</td>
                <td>@reservation.ReservationDeposit</td>
                <td>@reservation.ReservationPrice</td>
                <td>@reservation.ReservationType.ToString()</td>
                <td class="d-flex flex-column">
                    <a href="@Url.Action("Index", "Service", new { reservationId = reservation.ReservationId })">Aggiungi servizio</a>
                    <a href="@Url.Action("Index", "Checkout", new { reservationId = reservation.ReservationId })">Checkout</a>
                </td>
                <td>
                    <div class="d-flex">
                        <button type="button" class="btn btn-warning btn-sm me-1" data-id="@reservation.ReservationId" onclick="loadUpdateReservationPartial(@reservation.ReservationId)">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button type="button" class="btn btn-danger btn-sm" data-id="@reservation.ReservationId" onclick="deleteReservation(@reservation.ReservationId)">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>