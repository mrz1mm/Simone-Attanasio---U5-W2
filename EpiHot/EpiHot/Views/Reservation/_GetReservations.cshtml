@model List<EpiHot.Models.MW.GetReservationMW>

<h2>Elenco Prenotazioni</h2>
<table class="table">
    <thead>
        <tr>
            <th>Nome completo</th>
            <th>Numero stanza</th>
            <th>Numero prenotazione</th>
            <th>Data di prenotazione</th>
            <th>Data di inizio soggiorno</th>
            <th>Data di fine soggiorno</th>
            <th>Caparra</th>
            <th>Prezzo</th>
            <th>Tipo di soggiorno</th>
            <th>Configura</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reservation in Model)
        {
            <tr>
                <td>@reservation.CustomerFullName</td>
                <td>@reservation.RoomNumber</td>
                <td>@reservation.ReservationNumber</td>
                <td>@reservation.ReservationDate.ToString("dd/MM/yyyy")</td>
                <td>@reservation.ReservationStartStayDate.ToString("dd/MM/yyyy")</td>
                <td>@reservation.ReservationEndStayDate.ToString("dd/MM/yyyy")</td>
                <td>@reservation.ReservationDeposit</td>
                <td>@reservation.ReservationPrice</td>
                <td>@reservation.ReservationType.ToString()</td>
                <td class="d-flex flex-column">
                    <a href="@Url.Action("AddServiceToReservationPartial", "Service", new { reservationId = reservation.ReservationId })">Aggiungi servizio</a>
                    <a href="#">Checkout</a>
                </td>
                <td>
                    <div class="d-flex">
                    <button type="button" class="btn btn-warning btn-sm btnUpdate me-1" data-id="@reservation.ReservationId">
                        <i class="fas fa-edit"></i>
                    </button>
                    <button type="button" class="btn btn-danger btn-sm btnDelete" data-id="@reservation.ReservationId">
                        <i class="fas fa-trash"></i>
                    </button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modale di Conferma Eliminazione -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Conferma Cancellazione</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Sei sicuro di voler cancellare questa prenotazione?
            </div>
            <div class="modal-footer">
                @using (Html.BeginForm("DeleteReservation", "Reservation", FormMethod.Post, new { id = "deleteReservationForm" }))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="deleteReservationId" value="" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Annulla</button>
                    <input type="submit" class="btn btn-danger" value="Conferma" />
                }
            </div>
        </div>
    </div>
</div>

