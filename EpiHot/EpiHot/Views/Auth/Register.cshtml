<link rel="stylesheet" href="~/css/Auth.css" />
@model EpiHot.Models.Dto.RegisterDto

@{
    ViewData["Title"] = "Index";
}

<div class="wrapper mt-10">
    <div class="form-wrapper sign-in">
        <form asp-controller="Auth" asp-action="Register" method="post">
            <h2>Sign Up</h2>
            <div class="input-group form-group">
                <input asp-for="Username" type="text" class="form-control" placeholder="Username" />
            </div>
            <div class="input-group form-group">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
            </div>
            <div class="input-group form-group">
                <input asp-for="RoleType" type="text" class="form-control" placeholder="Ruolo" />
            </div>
            <div class="form-group">
                <button type="submit" value="Register" class="btn btn-primary">Sign Up</button>
            </div>
        </form>
    </div>
</div>