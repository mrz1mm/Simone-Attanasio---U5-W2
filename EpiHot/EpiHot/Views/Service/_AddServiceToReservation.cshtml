@model EpiHot.Models.MW.AddReservationServiceMW

<h2>Aggiungi servizio alla prenotazione</h2>

<form asp-action="AddServiceToReservation" method="post">
    <div class="form-group">
        <label for="ReservationId">Seleziona Prenotazione</label>
        <select asp-for="ReservationService.ReservationId" class="form-control" asp-items="@(new SelectList(Model.Reservations, "ReservationId", "ReservationNumber", Model.ReservationService.ReservationId))">
            <option value="">Seleziona una prenotazione</option>
        </select>
    </div>
    <div class="form-group">
        <label for="ServiceId">Seleziona Servizio</label>
        <select asp-for="ReservationService.ServiceId" class="form-control" asp-items="@(new SelectList(Model.Services, "ServiceId", "ServiceType"))">
            <option value="">Seleziona un servizio</option>
        </select>
    </div>
    <div class="form-group">
        <label for="ServiceDate">Data e Ora del Servizio</label>
        <input type="datetime-local" asp-for="ReservationService.ServiceDate" class="form-control"
               value="@Model.ReservationService.ServiceDate.ToString("yyyy-MM-ddTHH:mm")" />
    </div>
    <div class="form-group">
        <label for="ServiceQuantity">Quantità</label>
        <input type="number" asp-for="ReservationService.ServiceQuantity" class="form-control" />
    </div>
    <div class="form-group">
        <label for="ServicePrice">Prezzo</label>
        <input type="number" asp-for="ReservationService.ServicePrice" class="form-control" step="0.01" />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Aggiungi</button>
</form>
